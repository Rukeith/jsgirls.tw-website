    // contact 
    #contact.fullSection
      .container
        .section-heading
          h2 Contact
        .row
          // contact form 
          .col-md-6.col-sm-6
            .contact-form.wow.fadeInLeft.showdelay2
              form(role='form')
                .form-group
                  label Name
                  input.form-control(type='text')
                .form-group
                  label Email
                  input.form-control(type='email')
                .form-group
                  label Message
                  textarea.form-control(rows='7')
                .pull-right
                  button.btn.btn-custom.btn-lg(type='submit') Submit
              .clearfix
          // address 
          .col-md-6.col-sm-6
            .address.wow.fadeInRight.showdelay2
              h3 Address
              ul.unstyled
                li
                  i.fa.fa-map-marker
                  | 25th Street, Suite 2 New York NY 10887
                li
                  i.fa.fa-envelope
                  | email@domain.com
                li
                  i.fa.fa-phone
                  | +40 (0) 231 1234 567
                li
                  i.fa.fa-fax
                  | +40 (0) 123 1234 568
            .social.wow.fadeInRight.showdelay2
              h3 Be Social
              ul.social-link
                li
                  a(href='#')
                    i.fa.fa-facebook
                li
                  a(href='#')
                    i.fa.fa-twitter
                li
                  a(href='#')
                    i.fa.fa-linkedin
                li
                  a(href='#')
                    i.fa.fa-google-plus